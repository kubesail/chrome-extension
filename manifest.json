{
  "name": "KubeSail",
  "version": "1.0",
  "description": "Apply Kubernetes configurations on KubeSail from around the web!",
  "permissions": ["activeTab", "<all_urls>"],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "css": ["inject.css"]
    }
  ],
  "homepage_url": "https://kubesail.com",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "android-chrome-192x192.png",
    "128": "android-chrome-192x192.png"
  }
}
